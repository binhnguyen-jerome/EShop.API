@using EShop.ViewModels.Dtos.User
@model RegisterRequest
@{
    ViewData["Title"] = "Register";
}
<section class="my-lg-14 my-8">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-md-6 col-lg-4 order-lg-1 order-2">
                <img src="~/images/svg-graphics/signin-g.svg" alt="" class="img-fluid" />
            </div>
            <div class="col-12 col-md-6 offset-lg-1 col-lg-4 order-lg-2 order-1">
                <div class="mb-lg-9 mb-5">
                    <h1 class="mb-1 h2 fw-bold">Sign in to FreshCart</h1>
                    <p>
                        Welcome back to EverydayGroceries! Enter your email to get started.
                    </p>
                </div>
                <form class="needs-validation" novalidate asp-action="Register" method="post">
                    <div class="row g-3">
                        <div class="col">
                            <label for="formSignupfname" class="form-label visually-hidden" asp-for="FirstName">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control" id="formSignupfname" placeholder="First Name" required />
                            <div class="invalid-feedback">Please enter first name.</div>
                        </div>
                        <div class="col">
                            <label for="formSignuplname" class="form-label visually-hidden" asp-for="LastName">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control" id="formSignuplname" placeholder="Last Name" required />
                            <div class="invalid-feedback">Please enter last name.</div>
                        </div>
                        <div class="col-12">
                            <label for="formSignupPhoneNumber" class="form-label visually-hidden" asp-for="PhoneNumber">PhoneNumber</label>
                            <input asp-for="PhoneNumber" type="number" class="form-control" id="formSignupPhoneNumber" placeholder="PhoneNumber" required />
                            <div class="invalid-feedback">Please enter your phone number.</div>
                        </div>
                        <div class="col-12">
                            <label for="formSignupStreetAddress" class="form-label visually-hidden" asp-for="StreetAddress">Street Address</label>
                            <input asp-for="StreetAddress" type="text" class="form-control" id="formSignupStreetAddress" placeholder="Street Address" />
                        </div>
                        <div class="col">
                            <label for="formSignupState" class="form-label visually-hidden" asp-for="State">State</label>
                            <input asp-for="State" type="text" class="form-control" id="formSignupState" placeholder="State" />
                        </div>
                        <div class="col">
                            <label for="formSignupCity" class="form-label visually-hidden" asp-for="City">City</label>
                            <input asp-for="City" type="text" class="form-control" id="formSignupCity" placeholder="City" />
                        </div>
                        <div class="col">
                            <label for="formSignupPostalCode" class="form-label visually-hidden" asp-for="PostalCode">Postal Code</label>
                            <input asp-for="PostalCode" type="number" class="form-control" id="formSignupPostalCode" placeholder="Postal Code" />
                        </div>
                        <div class="col-12">
                            <label for="formSignupEmail" class="form-label visually-hidden" asp-for="Email">Email address</label>
                            <input asp-for="Email" type="email" class="form-control" id="formSignupEmail" placeholder="Email" required />
                            <div class="invalid-feedback">Please enter your email address.</div>
                        </div>
                        <div class="col-12">
                            <div class="password-field position-relative">
                                <label for="formSignupPassword" class="form-label visually-hidden" asp-for="Password">Password</label>
                                <div class="password-field position-relative">
                                    <input asp-for="Password" type="password" class="form-control fakePassword" id="formSignupPassword" placeholder="*****" required />
                                    <span><i class="bi bi-eye-slash passwordToggler"></i></span>
                                    <div class="invalid-feedback">Please enter your password.</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                        <p><small>By continuing, you agree to our <a href="#!">Terms of Service</a> & <a href="#!">Privacy Policy</a></small></p>
                        <div>If you have an account? <a href="../pages/signup.html">Sign In</a></div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>