@using EShop.ViewModels.ViewModel
@model HomeVM 
@{ 
    ViewData["Title"] = "Home Page"; 
}
<partial name="_Carousel"/>
<section class="mb-lg-10 mt-lg-14 my-8">
    <div class="container">
        <div class="row">
            <div class="col-12 mb-6">
                <h3 class="mb-0">Featured Categories</h3>
            </div>
        </div>
        <div class="category-slider d-flex flex-wrap">
            @foreach (var category in Model.Categories)
            {
                <div class="item p-2">
                    <a asp-controller="Shop"
                       asp-action="Index"
                       asp-route-categoryId="@category.Id"
                       class="text-decoration-none text-inherit">
                        <div class="card card-product mb-lg-4">
                            <div class="card-body text-center py-8">
                                <img src="~/images/category/category-dairy-bread-eggs.jpg"
                                     alt="Grocery Ecommerce Template"
                                     class="mb-3 img-fluid" />
                                <div class="text-truncate">@category.Name</div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<section class="py-5">
    <div class="container">
        <h2 class="mb-4">Popular Products</h2>
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <partial name="_ProductCard" model="product" />
                </div>
            }
        </div>
    </div>
</section>