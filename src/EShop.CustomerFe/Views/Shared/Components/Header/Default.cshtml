@using EShop.ViewModels.Dtos.Category
@model IEnumerable<CategoryResponse>
<header>
    <div class="border-bottom">
        <div class="bg-light py-1 text-dark">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-12 text-center text-md-start">
                        <span>Super Value Deals - Save more with coupons</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-3">
            <div class="container">
                <div class="row w-100 align-items-center gx-lg-2 gx-0">
                    <div class="col-xxl-2 col-lg-3 col-md-6 col-5">
                        <a class="navbar-brand d-none d-lg-block" asp-action="Index">
                            <img src="~/images/logo/freshcart-logo.svg"
                                 alt="eCommerce" />
                        </a>
                        <div class="d-flex justify-content-between w-100 d-lg-none">
                            <a class="navbar-brand" asp-action="Index">
                                <img src="~/images/logo/freshcart-logo.svg"
                                     alt="eCommerce" />
                            </a>
                        </div>
                    </div>
                    <div class="col-xxl-5 col-lg-5 d-none d-lg-block">
                        <form action="#">
                            <div class="input-group">
                                <input class="form-control rounded"
                                       type="search"
                                       placeholder="Search for products" />
                                <span class="input-group-append">
                                    <button class="btn bg-white border border-start-0 ms-n10 rounded-0 rounded-end"
                                            type="button">
                                        <i data-feather="search"></i>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-2 col-xxl-3 d-none d-lg-block">
                        <button type="button" class="btn btn-outline-gray-400 text-muted"
                  <i class="feather-icon icon-map-pin me-2"></i> Location
                  </button>
                    </div>
                    <!--Card WishList and Account-->
                    <div class="col-lg-2 col-xxl-2 text-end col-md-6 col-7">
                        <partial name="_AccountPartial" />
                    </div>
                </div>
            </div>
        </div>
        <!-- Nav bar -->
        <nav class="navbar navbar-expand-lg bg-body pb-2 bg-body">
            <div class="container">
                <a class="navbar-brand bg-primary p-2 rounded text-light" href="#">All Products</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Shop
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var category in Model)
                                {
                                    <li><a class="dropdown-item" asp-controller="Shop" asp-action="Index" asp-route-categoryId="@category.Id">@category.Name</a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>