@{
    var token = User.Claims.FirstOrDefault(c => c.Type == "JWT")?.Value;
    var userName = User.Identity.Name;
}
@if(token != null)
{
  <li class="nav-item">
        <a class="nav-link" asp-controller="User" asp-action="Logout">Logout @userName</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="User" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="User" asp-action="Register">Register</a>
    </li>
}