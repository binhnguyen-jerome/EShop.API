@using EShop.ViewModels.Dtos.Product
@model ProductResponse
<div class="card card-product">
    <div class="card-body">
        <div class="text-center position-relative">
            <div class="position-absolute top-0 start-0">
                <span class="badge bg-danger">Sale</span>
            </div>
            <img src="@Model.ProductImages[0].ImageUrl"
                 alt="Product Image"
                 class="mb-3 img-fluid" />
        </div>
        <div class="text-small mb-1">
            <a href="#!" class="text-decoration-none text-muted"><small>@Model.CategoryName</small></a>
        </div>
        <h2 class="fs-6 text-inherit text-decoration-none">
            <a asp-action="Detail" asp-controller="Product" asp-route-productId="@Model.Id">
                @Model.Name
            </a>
        </h2>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                <span class="text-dark">$@Model.PriceDiscount</span>
                <span class="text-decoration-line-through text-muted">$@Model.Price</span>
            </div>
            <div>
                <button class="btn btn-primary btn-sm" onclick='addToCart("@Model.Id", "1")'>
                    <i data-feather="plus" width="16" height="16"></i>
                    Add
                </button>
            </div>
        </div>
    </div>
</div>