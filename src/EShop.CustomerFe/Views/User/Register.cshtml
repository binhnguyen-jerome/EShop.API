@model EShop.ViewModels.UserViewModel.RegisterRequest
<!--Login Section-->
<section class="my-lg-14 my-8">
    <div class="container">
        <!-- row -->
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-md-6 col-lg-4 order-lg-1 order-2">
                <!-- img -->
                <img src="~/images/svg-graphics/signin-g.svg"
                     alt=""
                     class="img-fluid" />
            </div>
            <!-- col -->
            <div class="col-12 col-md-6 offset-lg-1 col-lg-4 order-lg-2 order-1">
                <div class="mb-lg-9 mb-5">
                    <h1 class="mb-1 h2 fw-bold">Sign in to FreshCart</h1>
                    <p>
                        Welcome back to EverydayGroceries! Enter your email to get started.
                    </p>
                </div>

                <form class="needs-validation" novalidate asp-action="Register" method="post">
                    <div class="row g-3">
                        <div class="col">
                            <!-- input -->
                            <label for="formSignupfname"
                                   class="form-label visually-hidden" asp-for="FirstName">First Name</label>
                            <input type="text"
                                   class="form-control"
                                   id="formSignupfname"
                                   placeholder="First Name"
                                   required />
                            <div class="invalid-feedback">Please enter first name.</div>
                        </div>
                        <div class="col">
                            <!-- input -->
                            <label for="formSignuplname"
                                   class="form-label visually-hidden"asp-for="LastName" >Last Name</label>
                            <input type="text"
                                   class="form-control"
                                   id="formSignuplname"
                                   placeholder="First Name"
                                   required />
                            <div class="invalid-feedback">Please enter last name.</div>
                        </div>
                        <!--Phone Number-->
                        <div class="col-12">
                            <!-- input -->
                            <label for="formSignupPhoneNumber"
                                   class="form-label visually-hidden">PhoneNumber</label>
                            <input asp-for="PhoneNumber"
                                   type="number"
                                   class="form-control"
                                   id="formSignupPhoneNumber"
                                   placeholder="PhoneNumber"
                                   required />
                            <div class="invalid-feedback">Please enter your phone number.</div>
                        </div>
                        <!--Street Address-->
                        <div class="col-12">
                            <!-- input -->
                            <label for="formSignupStreetAddress"
                                   class="form-label visually-hidden">Street Address</label>
                            <input asp-for="PhoneNumber"
                                   type="number"
                                   class="form-control"
                                   id="formSignupStreetAddress"
                                   placeholder="Street Address"
                                    />
                        </div>
                        <!--City-->
                        <div class="col">
                            <!-- input -->
                            <label for="formSignupState"
                                   class="form-label visually-hidden" asp-for="State">State</label>
                            <input type="text"
                                   class="form-control"
                                   id="formSignupState"
                                   placeholder="State"
                                    />
                        </div>
                        <!--City-->
                        <div class="col">
                            <!-- input -->
                            <label for="formSignupCity"
                                   class="form-label visually-hidden" asp-for="City">City</label>
                            <input type="text"
                                   class="form-control"
                                   id="formSignupCity"
                                   placeholder="City"
                                    />
                        </div>
                        <!--Postal Code-->
                        <div class="col">
                            <!-- input -->
                            <label for="formSignupfname"
                                   class="form-label visually-hidden" asp-for="PostalCode">Postal Code</label>
                            <input type="number"
                                   class="form-control"
                                   id="formSignupPostalCode"
                                   placeholder="Postal Code"
                                    />
                        </div>
                        <!-- row -->
                        <div class="col-12">
                            <!-- input -->
                            <label for="formSignupEmail"
                                   class="form-label visually-hidden">Email address</label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   id="formSignupEmail"
                                   placeholder="Email"
                                   required />
                            <div class="invalid-feedback">Please enter name.</div>
                        </div>
                        <div class="col-12">
                            <!-- input -->
                            <div class="password-field position-relative">
                                <label for="formSigninPassword"
                                       class="form-label visually-hidden">Password</label>
                                <div class="password-field position-relative">
                                    <input asp-for="Password"
                                           type="password"
                                           class="form-control fakePassword"
                                           id="formSignupPassword"
                                           placeholder="*****"
                                           required />
                                    <span>
                                        <i class="bi bi-eye-slash passwordToggler"></i>
                                    </span>
                                    <div class="invalid-feedback">
                                        Please enter password.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- btn -->
                        <div class="col-12 d-grid">
                            <button type="submit" class="btn btn-primary">
                                Register
                            </button>
                        </div>
                        <!--Text-->
                        <p>
                            <small>
                                By continuing, you agree to our
                                <a href="#!">Terms of Service</a>
                                &
                                <a href="#!">Privacy Policy</a>
                            </small>
                        </p>
                        <!-- link -->
                        <div>
                             If you have an account?
                            <a href="../pages/signup.html">Sign In</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>